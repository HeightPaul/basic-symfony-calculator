{% extends 'base.html.twig' %}

{% block body %}
<div class="jumbotron">
    <div class="d-flex justify-content-center">
        <h1 class="display-4">Math Calculator</h1>
    </div>
    <div class="d-flex justify-content-center">
        {{ form(form) }}
    </div>
    {% if calculation is defined and calculation is not empty %}
    <div class="d-flex justify-content-center">
        <div class="mb-3">
            <input class="form-control" id="calculation" value="{{ calculation }}">
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}